{
  "version": 2,
  "builds": [
    { "src": "index.js", "use": "@vercel/node" },
    { "src": "api/cleanup.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/cleanup", "dest": "api/cleanup.js" },
    { "src": "/(.*)", "dest": "index.js" }
  ],
  "crons": [
    {
      "path": "/api/cleanup",
      "schedule": "0 * * * *" // Hourly
    }
  ]
}